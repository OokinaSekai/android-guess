<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="The computer only considers a number between 1 to 1000"
        android:textSize="22sp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:textSize="25sp"
        android:layout_marginTop="150dp"
        android:hint="# # # #"
        android:inputType="number"
        android:maxLength="4"
        android:gravity="center"
        android:textColorHint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_circle_shape"
        android:onClick="btnClick"
        android:layout_centerHorizontal="true"
        android:text="Check"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:enabled="false"/>

    <Button
        android:id="@+id/plus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/tri_plus"
        android:layout_below="@+id/text1"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="plusclick"
        style="?android:attr/borderlessButtonStyle"
        />

    <Button
        android:id="@+id/min"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/tri_min"
        android:layout_below="@+id/text1"
        android:layout_marginTop="245dp"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="minusclick"
        style="?android:attr/borderlessButtonStyle"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/smile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/smile"
        android:layout_below="@+id/text2"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cry"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cry"
        android:layout_below="@+id/text2"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>